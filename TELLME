 1700  REM
 1710  REM *** SEE IF ANSWER IS ALLOWED ***
 1720  REM
 1730  PRINT TAB(0,15);CHR$(131);
 1740  INPUT "Allowed (Y or N) : "YN$
 1750  IF YN$="N" AND H$=KEY1$ LET SC1=SC1-1 : GOTO 1810
 1760  IF YN$="N" AND H$=KEY2$ SC2=SC2-1 : GOTO 1810
 1770  IF YN$="Y" AND H$=KEY1$ SC1=SC1+1 : GOTO 1810
 1780  IF YN$="Y" AND H$=KEY2$ SC2=SC2+1 : GOTO 1810
 1790  IF YN$<>"Y" THEN PROCbeep : GOTO 1740
 1800  IF YN$<>"N" THEN PROCbeep : GOTO 1740
 1810  NEXT
 1820  FOR A=1 TO 1000 : NEXT A
 1830  CLS
 1840  IF SC1>SC2 THEN WIN$=NAME1$
 1850  IF SC2>SC1 THEN WIN$=NAME2$
 1860  IF SC1=SC2 THEN WIN$="DRAW"
 1870  PRINT CHR$(131);CHR$(136);CHR$(141);"     THE WINNER ] ";WIN$
 1880  PRINT CHR$(131);CHR$(136);CHR$(141);"     THE WINNER ] ";WIN$
 1890  PRINT
 1900  PRINT "SCORES :"
 1910  PRINT
 1920  PRINT CHR$(133);NAME1$;" SCORED ";SC1
 1930  PRINT
 1940  PRINT CHR$(133);NAME2$;" SCORED ";SC2
 1950  PRINT
 1960  PRINT "Do you want to play again ? ";
 1970  F$=GET$
 1980  IF F$="N" MODE7 : END
 1990  IF F$="Y" RUN
 2000  IF F$<>"N" AND F$<>"Y" PROCbeep : GOTO 1820
