 1080  REM
 1090  REM *** READ DATA AND DISPLAY ***
 1100  REM
 1110  READ TH$
 1120  K=RND(90)
 1130  IF K<65 THEN GOTO 1120
 1140  IF K=90 GOTO 1120
 1150  IF K=88 GOTO 1120
 1170  IF K=85 GOTO 1120
 1180  IF K=86 GOTO 1120
 1190  IF K=89 GOTO 1120
 1200  PRINT TAB(12,8);CHR$(141);TH$
 1210  PRINT TAB(12,9);CHR$(141);TH$
 1220  PRINT TAB(18,10);CHR$(141);CHR$(K) 
 1230  PRINT TAB(18,11);CHR$(141);CHR$(K)
 1240  REM
 1250  REM *** SEE WHO ANSWERS FIRST ***
 1260  REM
 1270  H$=GET$
 1280  IF H$="@" THEN GOTO 1810
 1290  IF H$=KEY1$ THEN PRINT TAB(15,13);NAME1$ : GOSUB 1320 : GOTO 1730
 1300  IF H$=KEY2$ THEN PRINT TAB(15,13);NAME2$ : GOSUB 1320 : GOTO 1730  
 1310  IF H$<>KEY1$ AND H$<>KEY2$ PROCbeep : GOTO 1270
 1320  PRINT CHR$(131);
 1330  REM
 1340  REM *** INPUT THE ANSWER ***
 1350  REM
 1360  INPUT "Answer : "M
 1370  RETURN
